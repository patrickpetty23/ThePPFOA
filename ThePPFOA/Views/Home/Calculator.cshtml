@{
    ViewData["Title"] = "Pricing Calculator";
}
<h1>@ViewData["Title"]</h1>

<table>
    <thead>
        <tr>
            <th>Item</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Hourly Rate</td>
            <td><input type="text" value="$50 per hour" readonly></td>
        </tr>
        <tr>
            <td>9mm ammo (handgun)</td>
            <td><input type="text" value="$0.30 per round" readonly></td>
        </tr>
        <tr>
            <td>5.56 ammo (rifle)</td>
            <td><input type="text" value="$0.50 per round" readonly></td>
        </tr>
        <tr>
            <td>.22 Long Rifle ammo (rifle)</td>
            <td><input style="width: 300px" type="text" value="100 rounds free ($0.05 per round after)" readonly></td>
        </tr>
    </tbody>
</table><br />

<div>
    <h6>Pricing Estimator</h6>
    <label for="hours">Please Enter the Number of Hours You Would Like to Train: <span style="color: red">*</span></label>
    <input type="number" id="hours">
</div>

<div>
    <label for="ammo9mm">Enter Number of 9mm Bullets: <span style="color: red">*</span></label>
    <input type="number" id="ammo9mm">
</div>

<div>
    <label for="ammo556">Enter Number of 5.56 Bullets: <span style="color: red">*</span></label>
    <input type="number" id="ammo556">
</div>

<div>
    <label for="ammo22lr">Enter Number of .22 LR Bullets: <span style="color: red">*</span></label>
    <input type="number" id="ammo22lr">
    <button id="submitBtn">Submit</button>
    <button id="clearBtn">Clear</button>
</div><br />

<div>
    <label>Estimated Price:</label>
    <span id="output" class="special-span"></span>
</div>

<script src="site.js"></script>